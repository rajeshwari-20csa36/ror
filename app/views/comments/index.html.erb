<h1>All Comments</h1>

<% if @comments.any? %>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <%= comment.body %>
        <%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %>
        <%= button_to 'Delete', post_comment_path(comment.post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No comments found.</p>
<% end %>

<%= link_to 'New Comment', new_post_comment_path(@post) %>
