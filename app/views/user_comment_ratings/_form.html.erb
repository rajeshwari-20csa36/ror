<%= form_with(model: [comment, UserCommentRating.new], url: comment_ratings_path(comment), local: true) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5 %>
  </div>
  <div class="actions">
    <%= form.submit 'Submit Rating', class: 'btn btn-success' %>
  </div>
<% end %>
