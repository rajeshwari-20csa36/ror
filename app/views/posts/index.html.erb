<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div class="post-container">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <h3>Comments:</h3>
    <% if post.comments.any? %>
      <% post.comments.each do |comment| %>
        <p><%= comment.body %></p>
      <% end %>
    <% else %>
      <p>No comments for this post.</p>
    <% end %>

    <div class="post-actions">
      <%= link_to 'Edit', edit_topic_post_path(post.topic, post), class: 'btn btn-edit' %>
      <%= button_to 'Delete', topic_post_path(post.topic, post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-delete' %>
    </div>

    <h3>Rating's Section:</h3>
    <div class="ratings-section">
      <% (1..5).each do |values| %>
        <div class="rating">
          <% if post.ratings.where(value: values).any? %>
            <h6><%= pluralize(post.ratings.where(value: values).count, 'Rating') %> for <%= values %> Stars</h6>
          <% else %>
            No ratings for <%= values %> stars
          <% end %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
<% end %>

<div class="back-to-topics">
  <%= link_to 'Back to Topics', topics_path, class: 'btn btn-show' %>
  <%= will_paginate(@posts) %>
</div>
