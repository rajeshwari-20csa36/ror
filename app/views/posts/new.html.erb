<!-- app/views/posts/new.html.erb -->

<h1>New Post</h1>

<%= form_with(model: [@topic, @post], local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :content %>
  <%= form.text_area :content %>

  <%= form.submit 'Create Post' %>
<% end %>

<%= link_to 'Back', topic_posts_path(@topic), class: 'btn btn-show' %>
