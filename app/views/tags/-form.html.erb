<%= form_with(model: tag, url: topic_post_path(@topic, post), method: :patch, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save Tag', class: "btn btn-success" %>
  </div>
<% end %>
