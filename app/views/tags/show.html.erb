
<p style="color: green"><%= notice %></p>

<div class="tag-container">
  <%= render @tag %>

  <div class="tag-actions">
    <%= link_to "Edit this tag", edit_tag_path(@tag), class: 'btn btn-edit' %> |
    <%= link_to "Back to tags", tags_path, class: 'btn btn-show' %>

    <%= button_to "Destroy this tag", @tag, method: :delete, data: { confirm: 'Are you sure you want to delete this tag?' }, class: 'btn btn-delete' %>
  </div>
</div>
