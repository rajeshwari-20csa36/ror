
<h1>New Rating</h1>

<%= form_with(model: @rating, url: url_for(controller: 'ratings', action: 'create', post_id: @post.id), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :value, class: 'form-label' %>
    <%= form.select :value, options_for_select([['1 star', 1], ['2 stars', 2], ['3 stars', 3], ['4 stars', 4], ['5 stars', 5]]), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit Rating', class: 'btn btn-primary' %>
  </div>
<% end %>
